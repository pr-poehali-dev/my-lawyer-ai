{
  "tests": [
    {
      "name": "Test OPTIONS request for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedHeaders": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "name": "Test legal question",
      "method": "POST",
      "path": "/",
      "body": {
        "question": "Какой срок исковой давности по гражданским делам?"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "answer": "string",
        "question": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Test empty question",
      "method": "POST",
      "path": "/",
      "body": {
        "question": ""
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}
